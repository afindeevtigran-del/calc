<div class="card">
  <h2>üìà –ö–∞–ª—å–∫—É–ª—è—Ç–æ—Ä –ø—Ä–∏–±—ã–ª–∏</h2>

  <label>–ù–∞—á–∞–ª—å–Ω–∞—è —Å—É–º–º–∞</label>
  <input type="number" id="sum" value="100000">

  <label>–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –º–µ—Å—è—Ü–µ–≤</label>
  <input type="number" id="months" value="12">

  <button onclick="calculate()">–ü–æ—Å—á–∏—Ç–∞—Ç—å</button>

  <div class="result" id="result"></div>
</div>

<script>
function calculate() {
  const initialSum = Number(document.getElementById("sum").value);
  const months = Number(document.getElementById("months").value);

  const rates = {
    "20% —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–∞—è": Math.pow(1 + 0.20, 1/12) - 1,
    "15% —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω–∞—è": Math.pow(1 + 0.15, 1/12) - 1
  };

  let output = "";

  for (let name in rates) {
    let balance = initialSum;
    output += name + "\n";

    for (let m = 1; m <= months; m++) {
      let profit = balance * rates[name];
      balance += profit;
      output += `–ú–µ—Å—è—Ü ${m}: +${profit.toFixed(2)} ‚Üí ${balance.toFixed(2)}\n`;
    }
    output += "\n";
  }

  document.getElementById("result").innerText = output;
}
</script>

